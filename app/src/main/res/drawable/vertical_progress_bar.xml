<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Фон прогрессбара с закругленными углами -->
    <item android:id="@android:id/background">
        <shape>
            <corners android:radius="5dp" />
            <gradient
                android:startColor="#F3B553"
                android:endColor="#F3B553"
                android:centerY="0.75"
                android:angle="98" />
        </shape>
    </item>

    <item android:id="@android:id/progress">
        <clip android:clipOrientation="vertical" android:gravity="bottom">
            <shape>
                <corners android:radius="20dp" />
                <gradient
                    android:startColor="#313E42"
                    android:endColor="#313E42"
                    android:centerY="0.75"
                    android:angle="180" />
            </shape>
        </clip>
    </item>

    <!-- Вторичный прогресс прогрессбара с закругленными углами -->
    <item android:id="@android:id/secondaryProgress">
        <clip android:clipOrientation="vertical" android:gravity="bottom">
            <shape>
                <corners android:radius="5dp" /> <!-- Закругленные углы для вторичного прогресса -->
                <gradient
                    android:startColor="#37BFA6"
                    android:endColor="#37BFA6"
                    android:centerY="0.75"
                    android:angle="180" />
            </shape>
        </clip>
    </item>

</layer-list>
